{% extends "base.html.twig" %}

{% block title %}- Mot de passe oublié{% endblock %}

{% block body %}

    <div class="container wrap p-4 background vh">

        <h1 class="text-center">Mot de passe oublié</h1>

        {{ form_start(form, { 'attr' : {'novalidate': 'novalidate', 'class': 'pt-5 pb-5'}}) }}

            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {% if form_errors(form.email) %}
                <div class="alert alert-danger mt-2">
                    {{ form_errors(form.email) }}
                </div>
            {% endif %}

            <input type="submit" class="btn btn-primary-custom w-50 mt-5" value="Valider">

        {{ form_end(form) }}

    </div>

{% endblock %}
